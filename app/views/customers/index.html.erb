<h3>顧客一覧</h3>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>顧客名</th>
    <th>id</th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.csname %></td>
    <td><%= customer.id %></td>
    <td><%= link_to t('Show'), customer %>
    <%= link_to t('Edit'), edit_customer_path(customer) %>
    <%= link_to t('Destroy'), customer, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
<%= will_paginate @customers, :previous_label=>'≪前', :next_label=>'次≫' %>

<br />

