<%= form_for(@response) do |f| %>
  <% if @response.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@response.errors.count, "error") %> prohibited this response from being saved:</h2>

      <ul>
      <% @response.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= @response.user.user_name %>
    <%= f.hidden_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :顧客名 %><br />
    <%= @response.customer.csname %>
    <%= f.hidden_field :customer_id %>
  </div>
  <div class="field">
    <%= f.label :プロジェクト名 %><br />
    <%= @response.pjName %>
    <%= f.hidden_field :pjName %>
  </div>
  <div class="field">
    <%= f.label :対象年月 %><br />
    <%= @response.targetYMD %>
    <%= f.hidden_field :targetYear %>
	<%= f.hidden_field :targetMonth %>

  <br>
  <br>
  <table>
    <tr>
      <th>質問</th>
      <th>回答</th>
      <th>コメント</th>
      <th></th>
    </tr>
  
    <% i = 0 %>
    <% @response.response_items.each do |res_i| %>
	  <%= f.fields_for :response_items, res_i do |item| %>
        <tr>
        <td><%= res_i.question %></td>
		<td><%= item.collection_select :selectionItem, @current_request.questionnaire.questionitems[i].answers_select, :last, :first, :include_blank => true %></td>
        <td><%= item.text_field :Comment %></td>
		<td><%= item.hidden_field :question %></td>
		<% i = i + 1 %>
	    </tr>
      <% end %>	
	<% end %>
  </table>
  <br/>
   
  <div class="field">
    <%= f.label :その他コメント %><br />
    <%= f.text_field :comment %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
