<%= form_for(@topic, :html => {:multipart => true}) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_area :title, :size=>"60x2"%>
  </div>

  <div class="field">
    <%= f.label :contents %><br />
    <%= f.text_area :contents, :size=>"60x4"%>
  </div>

  <div class="field">
    <%= f.label :写真をアップロード %><br />
    <%= f.file_field :picture %>
  </div>

  <div class="field">
    <%= f.label :effective_to %><br />
    <%= f.date_select :effective_to %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
