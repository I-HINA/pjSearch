<h3>アンケート依頼実績一覧</h3>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>アンケートタイトル</th>
    <th>対象年</th>
    <th>対象月</th>
    <th>resident</th>
    <th>transfferred</th>
    <th></th>
  </tr>

<% @request_questionnaires.each do |request_questionnaire| %>
  <tr>
    <td><%= request_questionnaire.questionnaire.title %></td>
    <td><%= request_questionnaire.target_year %></td>
    <td><%= request_questionnaire.target_month %></td>
    <td><%= request_questionnaire.resident %></td>
    <td><%= request_questionnaire.transfferred %></td>
    <td>
    <%= link_to t('Show'), request_questionnaire %>
    <%= link_to t('ListResponse'), list_responses_path(request_questionnaire) %>
    <%= link_to t('Edit'), edit_request_questionnaire_path(request_questionnaire) %>
    <%= link_to t('Destroy'), request_questionnaire, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
