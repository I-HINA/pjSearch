<%= form_for(@request_questionnaire) do |f| %>
  <% if @request_questionnaire.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request_questionnaire.errors.count, "error") %> prohibited this request_questionnaire from being saved:</h2>

      <ul>
      <% @request_questionnaire.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :questionnaire_title %><br />
    <%= f.collection_select( :questionnaire_id, Questionnaire.all, :id, :title, :include_blank => false) %></div>
  </div>
  <div class="field">
    <%= f.label :target_year %><br />
    <%= f.number_field :target_year, :in => 2013..2020 %>
  </div>
  <div class="field">
    <%= f.label :target_month %><br />
    <%= f.number_field :target_month, :in => 1..12 %>
  </div>

  <p><b> target uses</b> </p>
  <div class="field">
    resident<br />
    <%= f.select :resident,  options_for_select({"" => "", "常駐者" => "t", "常駐者以外" => "f"})  %>
  </div>
  
  <div class="field">
    transfferred<br />
    <%= f.select :transfferred,  options_for_select({"" => "", "出向者" => "t", "出向者以外" => "f"})  %>
	  </div>
  <p><b> mail template</b> </p>
  <div class="field">
    <%= f.label :mail_tilte %><br />
    <%= f.text_field :mail_tilte %>
  </div>
  <div class="field">
    <%= f.label :mail_banner %><br />
    <%= f.text_area :mail_banner, :size=>"80x4" %>
  </div>
  <div class="field">
    <%= f.label :mail_content %><br />
    <%= f.text_area :mail_content, :size=>"80x10" %>
  </div>
  <div class="field">
    <%= f.label :mail_trailer %><br />
    <%= f.text_area :mail_trailer, :size=>"80x4" %>
  </div>

  <div class="field">
    <%= f.label :day_of_mail_sent %><br />
    <%= f.text_field :day_of_mail_sent, :disabled => true %>
  </div>

  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
